{
  "name": "tethernotes",
  "version": "1.0.0",
  "description": "A native desktop application",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "vite --no-clearScreen --logLevel error",
    "start": "cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=true concurrently --config .concurrent-rc \"npm run dev\" \"npm run electron-dev\"",
    "electron-dev": "nodemon --watch electron --exec \"tsc -p electron/tsconfig.json && cross-env NODE_ENV=development electron .\"",
    "build": "tsc && vite build && electron-builder",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix"
  },
  "build": {
    "appId": "com.tethernotes.app",
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "files": [
      "dist/**/*"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/signale": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "electron-reloader": "^1.2.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.0.0",
    "postcss": "^8.4.35",
    "prettier": "^3.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "wait-on": "^8.0.2"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@prisma/client": "^5.9.1",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "better-sqlite3": "^9.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^0.2.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.330.0",
    "prisma": "^5.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "signale": "^1.4.0",
    "tailwind-merge": "^2.6.0"
  }
}
